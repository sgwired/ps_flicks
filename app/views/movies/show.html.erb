<article>
  <header>
    <h2> <%= @movie.title %></h2>
  </header>
</article>
<p>
  <%= @movie.description %>
</p>
<table>
  <tr>
    <th>Rating:</th>
    <td><%= @movie.rating %></td>
  </tr>
  <tr>
    <th>Released On:</th>
    <td><%= @movie.released_on %></td>
  </tr>
  <tr>
    <th>Total Gross:</th>
    <td><%= format_total_gross(@movie) %></td>
  </tr>
</table>

<%= link_to "All Movies", root_path %>
<%= link_to "Edit", edit_movie_path %>
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: 'Are you sure?'} %>